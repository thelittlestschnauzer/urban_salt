<%= form_for @recipe do |f| %>
  <div class="form-control">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-control">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form-control">
    <%= f.file_field :image %>
  </div>
  <div class="actions">
    <%= f.submit 'Add Recipe' %>
  </div>
<% end %>
